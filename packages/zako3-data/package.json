{
  "name": "@zako-ac/zako3-data",
  "version": "0.1.0",
  "description": "Shared data schemas and types for Zako3",
  "license": "MIT",
  "author": "minco",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsc --watch",
    "build": "tsc",
    "test": "echo \"No tests yet\"",
    "lint": "echo \"No lint yet\"",
    "prepare": "npm run build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/zako3-data.cjs.production.min.js",
      "limit": "50 KB"
    },
    {
      "path": "dist/zako3-data.esm.js",
      "limit": "50 KB"
    }
  ],
  "dependencies": {
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^12.0.0",
    "husky": "^9.1.7",
    "size-limit": "^12.0.0",
    "tsdx": "^2.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  }
}

